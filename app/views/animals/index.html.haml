- provide(:title, "Index")

%h1.mb-4.d-flex.align-items-center.justify-content-between
    List of animals
    = link_to "Remove all", delete_path, class: "btn btn-primary" if @animals.count > 0

%table.table.table-striped
    %thead
        %tr
            %th Name
            %th Species
    %tbody
        - @animals.each do |a|
            %tr
                %td= a.name
                %td= a.species